<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.example.michael.copaydirect.App_Home"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Home Screen"
        android:id="@+id/home_id"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="32sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" USER ID:"
        android:id="@+id/user_phr_id"
        android:layout_below="@+id/home_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/space15_id"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/user_phr_id"
        android:text=""
        />
    <EditText
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/app_home_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="9 characters"
        android:textStyle="bold"
        android:maxLength="9"
        android:layout_below="@+id/space15_id"
        android:textColor="@color/white"
        android:padding="5dp"
        android:background="@drawable/rounded_edit_text"/>

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/space17_id"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/app_home_user_id"
        android:text=""
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" PASSWORD:"
        android:layout_below="@+id/space17_id"
        android:id="@+id/password_id"
        />

    <EditText
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/password_input_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="pass"
        android:layout_below="@+id/space16_id"
        android:textColor="@color/white"
        android:padding="5dp"
        android:background="@drawable/rounded_edit_text"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/space1_id"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/password_input_id"
        android:text=""
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Login as User"
        android:id="@+id/user_login_id"
        android:layout_below="@+id/space1_id"
        android:textStyle="bold"
        android:textSize="22sp"
        android:background="@drawable/rounded_button"
        android:padding="5dp"
        />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/space6_id"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/user_login_id"
        android:text=""
        />
 <Button
     android:layout_width="match_parent"
     android:textAppearance="?android:attr/textAppearanceLarge"
     android:layout_height="48dp"
     android:text="Login as Administrator"
     android:id="@+id/admin_login_id"
     android:layout_below="@+id/space6_id"
     android:textStyle="bold"
     android:background="@drawable/rounded_button"
     android:padding="5dp"
     android:textSize="22sp"
     />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/space3_id"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/admin_login_id"
        android:text=""
        />
 <Button
     android:layout_width="match_parent"
     android:layout_height="48dp"
     android:text="Create User Account"
     android:id="@+id/create_acct_id"
     android:layout_below="@+id/space3_id"
     android:textStyle="bold"
     android:textSize="22sp"
     android:background="@drawable/rounded_button"
     android:padding="5dp"

      />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/space4_id"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/create_acct_id"
        android:text=""
        />
 <Button
     android:layout_width="match_parent"
     android:layout_height="48dp"
     android:text="Forgot Password (Users Only)"
     android:id="@+id/forgot_password_id"
     android:layout_below="@+id/space4_id"
     android:textStyle="bold"
     android:textSize="22sp"
     android:background="@drawable/rounded_button"
     android:padding="5dp"

     />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/space5_id"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/forgot_password_id"
        android:text=""
        />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
