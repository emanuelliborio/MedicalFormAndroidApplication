<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.copaydirect.Insurance_Verification_Form"
    >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Insurance Verification Form"
            android:id="@+id/ins_ver_form_id"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space1_id"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/daysheet_phrase_id"
                android:text=""
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/space1_id"
                android:text="Patient First Name*:"
                android:id="@+id/v_fname_id"
                />

            <EditText
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/v_fname_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:textStyle="bold"
                android:textSize="20sp"
                android:hint="max: 30 characters"
                android:layout_below="@+id/v_fname_id"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@drawable/rounded_edit_text"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space4_id"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/v_fname_input_id"
                android:text=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Patient Last Name*:"
                android:id="@+id/v_lname_id"
                android:layout_below="@+id/space4_id"
                />
            <EditText
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/v_lname_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textStyle="bold"
                android:textSize="20sp"
                android:hint="max:30 characters"
                android:maxLength="30"
                android:layout_below="@+id/v_lname_id"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@drawable/rounded_edit_text"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space17_id"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/v_lname_input_id"
                android:text=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Member ID*:"
                android:id="@+id/Member_Num_ID"
                android:layout_below="@+id/space17_id"
                />
            <EditText
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/member_num_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textStyle="bold"
                android:textSize="20sp"
                android:hint="usually 9-12 characters"
                android:maxLength="18"
                android:layout_below="@+id/Member_Num_ID"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@drawable/rounded_edit_text"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space5_id"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/member_num_input_id"
                android:text=""
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date of Birth*:"
                android:id="@+id/DOB_id"
                android:layout_below="@+id/space5_id"
                />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DOB_datepicker"
                android:layout_below="@+id/DOB_id"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space8_id"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/DOB_datepicker"
                android:text=""
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="What is the name of your health insurance?*"
                android:id="@+id/ins_name_question_id"
                android:layout_below="@+id/space8_id"
                />
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/auto_complete_insurance_name_id"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:maxLength="60"
                android:inputType="text"
                android:textStyle="bold"
                android:hint="start typing..."
                android:layout_below="@+id/ins_name_question_id"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@drawable/rounded_edit_text"/>


            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space6_id"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/auto_complete_insurance_name_id"
                android:text=""
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Would you like to schedule a future appointment now?*"
                android:id="@+id/next_appt_id"
                android:layout_below="@+id/space6_id"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space10_id"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/insurance_notes_input_id"
                android:text=""
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:id="@+id/Future_Appt_Spinner"
                android:layout_below="@+id/space10_id"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space11_id"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/Future_Appt_Spinner"
                android:text=""
                />
            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_appt_datepicker"
                android:layout_below="@+id/space11_id" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space7_id"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/next_appt_datepicker"
                android:text=""
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go Back / Don't Save"
                android:id="@+id/go_back_dont_save_id"
                android:layout_below="@+id/space7_id"
                android:textStyle="bold"
                android:textSize="22sp"
                android:background="@drawable/rounded_button"
                android:padding="5dp"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space3_id"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/go_back_dont_save_id"
                android:text=""
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/logout_ins_id"
                android:layout_below="@+id/space3_id"
                android:textStyle="bold"
                android:textSize="22sp"
                android:background="@drawable/rounded_button"
                android:padding="5dp"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space2_id"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/logout_ins_id"
                android:text=""
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Verification Form"
                android:id="@+id/save_verification_form_id"
                android:layout_below="@+id/space2_id"
                android:textStyle="bold"
                android:textSize="22sp"
                android:background="@drawable/rounded_button"
                android:padding="5dp"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/space12_id"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/save_verification_form_id"
                android:text=""
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
