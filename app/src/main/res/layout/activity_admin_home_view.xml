<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.michael.copaydirect.Admin_Home">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Administration"
        android:id="@+id/title_id"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <ImageView android:id="@+id/company_icon"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@mipmap/ic_launcher_key_plus"
        android:layout_gravity="center"
        android:layout_below="@+id/title_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/admin_greeting_id"
        android:layout_below="@+id/company_icon"/>

    <TextView
        android:id="@+id/space2_id"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/admin_greeting_id"
        android:text=""
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What would you like to do?"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/admin_navigator"
        android:layout_below="@+id/space2_id"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All Insurance Verification Data"
        android:id="@+id/view_all_patients_ins_ver_data_id"
        android:layout_below="@+id/admin_navigator"
        android:textStyle="bold"
        android:textSize="22sp"
        android:background="@drawable/rounded_button"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/space3_id"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/view_all_patients_ins_ver_data_id"
        android:text=""
        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Daysheet Data"
            android:id="@+id/view_all_patients_daysheet_data_id"
            android:layout_below="@+id/space3_id"
            android:textStyle="bold"
            android:textSize="22sp"
            android:background="@drawable/rounded_button"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/space1_id"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/view_all_patients_daysheet_data_id"
            android:text=""
            />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete User Account"
        android:id="@+id/delete_user_account_id"
        android:layout_below="@+id/space1_id"
        android:textStyle="bold"
        android:textSize="22sp"
        android:background="@drawable/rounded_button"
        android:padding="5dp"/>

    </LinearLayout>
</ScrollView>


</LinearLayout>
